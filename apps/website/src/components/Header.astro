---
export interface Props {
  name: string;
  position: string;
  contact: ContactDetails;
}

export interface ContactDetails {
  email: string;
  linkedin: string;
  location: string;
  phoneNumber: string;
}

const { name, position, contact } = Astro.props;

import { makeId } from '../helpers';
import Icon from './Icon.astro';
---

<header id="header">
  <h1 id={makeId(name)}>
    <a href={`#${makeId(name)}`}>{name}</a>
  </h1>
  <h2 class="text-rose-700" id={makeId(position)}>
    <a href={`#${makeId(position)}`}>{position}</a>
  </h2>
  <div id="contact-details" class="flex w-full flex-wrap items-center">
    <p class="w-full flex items-center my-1 md:w-1/3" id="email">
      <a class="flex items-center" href="#contact-details">
        <Icon name="email" />
        {contact.email}
      </a>
    </p>
    <p class="w-full flex items-center my-1 md:w-1/3" id="phone-number">
      <a class="flex items-center" href="#contact-details">
        <Icon name="cellphone" />
        {contact.phoneNumber}
      </a>
    </p>
    <p class="w-full flex items-center my-1 md:w-1/3" id="location">
      <a class="flex items-center" href="#contact-details">
        <Icon name="map-marker" />
        {contact.location}
      </a>
    </p>
    <p class="flex w-full items-center my-1 md:w-fit" id="linkedin">
      <a
        class="flex items-center"
        href="https://www.linkedin.com/in/timothyaltemus"
        target="_blank">
        <Icon name="linkedin" />
        linkedin.com/in/{contact.linkedin}
      </a>
    </p>
  </div>
</header>

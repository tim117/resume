---
import { makeId } from '../helpers';
import Icon from './Icon.astro';
import Download from './Download';
import SocialMediaDisplay from './SocialMedia.astro';
import type { ContactData } from '../data/resume';

export interface Props {
  /** Name of the person who the resume describes. */
  name: string;
  /** Position the person the resume describes is pursuing. */
  position: string;
  /** Contact data for the person the resume describes. */
  contact: ContactData;
}

const { name, position, contact } = Astro.props;
---

<header id="header">
  <div class="flex justify-between items-center">
    <h1 id={makeId(name)}>
      <a href={`#${makeId(name)}`}>{name}</a>
    </h1>
    <Download client:load><Icon size="w-5" name="download" /></Download>
  </div>
  <h2 class="text-rose-700" id={makeId(position)}>
    <a href={`#${makeId(position)}`}>{position}</a>
  </h2>
  <div id="contact-details" class="flex w-full flex-wrap items-center">
    <p class="w-full flex items-center my-1 md:w-1/3" id="email">
      <a class="flex items-center" href="#contact-details">
        <Icon name="email" />
        {contact.email}
      </a>
    </p>
    <p class="w-full flex items-center my-1 md:w-1/3" id="phone-number">
      <a class="flex items-center" href="#contact-details">
        <Icon name="cellphone" />
        {contact.phoneNumber}
      </a>
    </p>
    <p class="w-full flex items-center my-1 md:w-1/3" id="location">
      <a class="flex items-center" href="#contact-details">
        <Icon name="map-marker" />
        {contact.location}
      </a>
    </p>
    <p class="flex w-full items-center my-1 md:w-1/3" id="linkedin">
      <SocialMediaDisplay
        url="https://www.linkedin.com/in/timothyaltemus"
        icon="linkedin"
        display="linkedin.com/in/timothyaltemus"
      />
    </p>
    <p class="flex w-full items-center my-1 md:w-1/3" id="linkedin">
      <SocialMediaDisplay
        url="https://github.com/tim117"
        icon="github"
        display="tim117"
      />
    </p>
  </div>
</header>
